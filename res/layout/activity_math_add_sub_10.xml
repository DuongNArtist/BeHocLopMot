<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_0"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtAs10Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/math_add_sub_10"
            android:textColor="@color/black_1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnAs10Return"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="10dp"
            android:src="@drawable/icon_quit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtAs10Number0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_00"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black_1"
                android:textSize="70sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAs10Up0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@drawable/up"
                android:src="@drawable/up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtAs10Number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_03"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black_1"
                android:textSize="70sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAs10Up1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@drawable/up"
                android:src="@drawable/up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtAs10Number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_05"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black_1"
                android:textSize="70sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAs10Up2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@drawable/up"
                android:src="@drawable/up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtAs10Number3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_07"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black_1"
                android:textSize="70sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAs10Up3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@drawable/up"
                android:src="@drawable/up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtAs10Number4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_09"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black_1"
                android:textSize="70sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAs10Up4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@drawable/up"
                android:src="@drawable/up" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnAs10Submit0"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_0"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit1"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_1"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit2"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_2"
            android:padding="10dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit3"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_3"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit4"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_4"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnAs10Submit5"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_0"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit6"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_1"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit7"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_2"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit8"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_3"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAs10Submit9"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_4"
            android:padding="5dp"
            android:textColor="@color/black_1"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_key"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</LinearLayout>