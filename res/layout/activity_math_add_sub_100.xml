<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_0"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtAmas100Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_03"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/math_add_sub_100"
            android:textColor="@color/black_1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnAmas100Return"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_0"
            android:contentDescription="@drawable/icon_quit"
            android:padding="10dp"
            android:src="@drawable/icon_quit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txtAmas100Operator"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_03"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black_1"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/txtAmas100Number0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_00"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/black_1"
                            android:textSize="60sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAmas100Number1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_02"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/black_1"
                            android:textSize="60sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txtAmas100Number2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_05"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/black_1"
                            android:textSize="60sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAmas100Number3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_07"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/black_1"
                            android:textSize="60sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:background="@color/black_1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp"
                android:paddingStart="80dp" >

                <TextView
                    android:id="@+id/txtAmas100Number4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_08"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black_1"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAmas100Number5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_09"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black_1"
                    android:textSize="60sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnAmas100Submit0"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_0"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit1"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_1"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit2"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_2"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit3"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_3"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit4"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_4"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnAmas100Submit5"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_0"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit6"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_1"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit7"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_2"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit8"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_3"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAmas100Submit9"
                style="@android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_4"
                android:padding="10dp"
                android:textColor="@color/black_1"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/adAmas10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/ad_key"
        app:loadAdOnCreate="true" >
    </com.google.ads.AdView>

</LinearLayout>